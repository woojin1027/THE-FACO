<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/edge">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font_dream"
                        android:gravity="center"
                        android:text="정류장"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/rail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/rail2" />

                <ImageView
                    android:id="@+id/returnrail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/returnrail" />

                <ImageView
                    android:id="@+id/rail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/rail1" />

                <ImageView
                    android:id="@+id/railstop"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="false"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/railstop1" />

                <ImageView
                    android:id="@+id/busicon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    app:srcCompat="@drawable/busicon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_marginRight="5dp"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/seatnote" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/note"
                    android:layout_alignTop="@id/note"
                    android:layout_alignRight="@id/note"
                    android:layout_alignBottom="@id/note"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_dream"
                    android:gravity="center"
                    android:text="좌석수"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/note"
                    android:layout_alignTop="@id/note"
                    android:layout_alignRight="@id/note"
                    android:layout_alignBottom="@id/note"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="좌석수"
                    android:fontFamily="@font/font_dream"
                    android:textColor="#056EED"
                    android:textSize="12sp"
                    android:typeface="sans" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/infoimage1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="301.5dp"
                android:adjustViewBounds="true"
                android:scaleX="0.13"
                android:visibility="visible"
                app:srcCompat="@drawable/textrail" />

            <ImageView
                android:id="@+id/infoimage2"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:adjustViewBounds="false"
                android:fitsSystemWindows="false"
                android:scaleType="centerInside"
                android:scaleX="1.4"
                android:scrollX="-5dp"
                android:visibility="visible"
                app:srcCompat="@drawable/textinfobox" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true"
                android:fontFamily="@font/font_dream"
                android:gravity="left"
                android:text="버스도착정보"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationX="60dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_dream"
                android:gravity="left"
                android:text="도착예정"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationX="60dp"
                android:translationY="50dp" />

            <ImageView
                android:id="@+id/lineinfo"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:scaleX="1.2"
                android:scaleY="1.0"
                android:translationX="282dp"
                android:translationY="80dp"
                app:srcCompat="@drawable/lineinfobox2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_dream"
                android:gravity="center"
                android:text="대기현황"
                android:textStyle="bold"
                android:translationX="301dp"
                android:translationY="90dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>